<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context="com.calculatorh.harshal.MainActivity">

        <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/GridLayout1"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/screen"
            tools:context="com.sample.foo.samplecalculator.MainActivity">

            <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_alignParentTop="true"

                android:layout_margin="6dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/textarea"
                tools:context="com.sample.foo.samplecalculator.MainActivity">


                <EditText
                    android:id="@+id/infoTextView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_margin="2dp"
                    android:layout_marginTop="10dp"
                    android:background="#F1F8E9"
                    android:cursorVisible="false"
                    android:enabled="true"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLines="10"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"

                    android:layout_alignParentStart="true"
                    android:layout_margin="2dp"
                    android:layout_marginBottom="10dp"
                    android:background="#F1F8E9"
                    android:cursorVisible="false"
                    android:enabled="true"
                    android:inputType="text"
                    android:gravity="right"
                    android:lines="1"
                    android:maxLines="10"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="35sp" />
            </RelativeLayout>
        </RelativeLayout>

        <GridLayout xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/GridLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"

            android:layout_marginStart="8dp"
            android:layout_marginTop="220dp"
            android:background="@android:color/white"
            android:columnCount="4"
            android:orientation="horizontal"

            android:rowCount="5"
            android:useDefaultMargins="true"
            tools:context="com.sample.foo.samplecalculator.MainActivity">


            <Button
                android:id="@+id/buttonClear"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:background="@drawable/operatorbutton"

                android:elevation="2dp"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:stateListAnimator="@null"

                android:text="C"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:translationZ="2dp"
                 />



            <Button
                android:id="@+id/buttonDelete"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:background="@drawable/operatorbutton"

                android:elevation="2dp"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:stateListAnimator="@null"
                android:text="Del"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:translationZ="2dp" />

            <Button
                android:id="@+id/buttonDivide"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:background="@drawable/operatorbutton"


                android:elevation="2dp"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:stateListAnimator="@null"
                android:text="/"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:translationZ="2dp" />

            <Button
                android:id="@+id/buttonMultiply"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:background="@drawable/operatorbutton"


                android:elevation="2dp"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:stateListAnimator="@null"
                android:text="*"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:translationZ="2dp" />


            <Button
                android:id="@+id/buttonSeven"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"

                android:background="@drawable/buttonshape"
                android:elevation="2dp"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:stateListAnimator="@null"
                android:text="7"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:translationZ="2dp"
                 />

            <Button
                android:id="@+id/buttonEight"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:background="@drawable/buttonshape"


                android:elevation="2dp"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:stateListAnimator="@null"
                android:text="8"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:translationZ="2dp" />

            <Button
                android:id="@+id/buttonNine"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:background="@drawable/buttonshape"


                android:elevation="2dp"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:stateListAnimator="@null"
                android:text="9"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:translationZ="2dp" />

            <Button
                android:id="@+id/buttonSubtract"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:background="@drawable/operatorbutton"


                android:elevation="2dp"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:stateListAnimator="@null"
                android:text="-"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:translationZ="2dp" />


            <Button
                android:id="@+id/buttonFour"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:background="@drawable/buttonshape"


                android:elevation="2dp"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:stateListAnimator="@null"
                android:text="4"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:translationZ="2dp" />

            <Button
                android:id="@+id/buttonFive"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:background="@drawable/buttonshape"


                android:elevation="2dp"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:stateListAnimator="@null"
                android:text="5"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:translationZ="2dp" />

            <Button
                android:id="@+id/buttonSix"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:background="@drawable/buttonshape"


                android:elevation="2dp"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:stateListAnimator="@null"
                android:text="6"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:translationZ="2dp" />

            <Button
                android:id="@+id/buttonAdd"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_gravity="fill_vertical"
                android:layout_margin="8dp"
                android:layout_rowSpan="2"

                android:background="@drawable/operatorbutton"

                android:elevation="2dp"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:stateListAnimator="@null"
                android:text="+"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:translationZ="2dp" />


            <Button
                android:id="@+id/buttonOne"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:background="@drawable/buttonshape"


                android:elevation="2dp"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:stateListAnimator="@null"
                android:text="1"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:translationZ="2dp" />

            <Button
                android:id="@+id/buttonTwo"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:background="@drawable/buttonshape"


                android:elevation="2dp"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:stateListAnimator="@null"
                android:text="2"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:translationZ="2dp" />

            <Button
                android:id="@+id/buttonThree"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:background="@drawable/buttonshape"


                android:elevation="2dp"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3"
                android:stateListAnimator="@null"
                android:text="3"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:translationZ="2dp" />


            <Button
                android:id="@+id/buttonZero"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:background="@drawable/buttonshape"


                android:elevation="2dp"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3"
                android:stateListAnimator="@null"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:translationZ="2dp" />

            <Button
                android:id="@+id/buttonDot"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:background="@drawable/buttonshape"


                android:elevation="2dp"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3"
                android:stateListAnimator="@null"
                android:text="."
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:translationZ="2dp" />

            <Button
                android:id="@+id/buttonEqual"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_columnSpan="2"

                android:layout_gravity="fill_horizontal"
                android:layout_margin="8dp"

                android:background="@drawable/equalbutton"
                android:elevation="2dp"
                android:paddingRight="5dp"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3"
                android:stateListAnimator="@null"
                android:text="="
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:translationZ="2dp" />


        </GridLayout>


    </RelativeLayout>

    </layout>
